    {# Bootstrap JS and dependencies #}
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Adjust sidebar position based on screen size
            function adjustSidebar() {
                var sidebar = document.getElementById('sidebar');
                if (window.innerWidth <= 768) {
                    sidebar.style.width = '100%';
                    sidebar.style.height = '60px'; /* Set a fixed height for the sidebar */
                    sidebar.style.flexDirection = 'row';
                    sidebar.style.justifyContent = 'space-around';
                    sidebar.style.borderRight = 'none';
                    sidebar.style.borderBottom = '1px solid #ddd';
                } else {
                    sidebar.style.width = '80px';
                    sidebar.style.height = '100%';
                    sidebar.style.flexDirection = 'column';
                    sidebar.style.justifyContent = 'flex-start';
                    sidebar.style.borderRight = '1px solid #ddd';
                    sidebar.style.borderBottom = 'none';
                }
            }

            // Initial adjustment
            adjustSidebar();

            // Adjust on window resize
            window.addEventListener('resize', adjustSidebar);
        });
    </script>
</body>
</html>